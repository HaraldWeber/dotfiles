# This file is used to extend the PATH variable

# Append missing PATH entries
PATH_ENTRIES="/usr/local/bin /usr/bin /bin /usr/local/sbin /usr/local/bin /usr/sbin /sbin $HOME/.bash/bin $HOME/.local/bin"
for ENTRY in ${PATH_ENTRIES}
do
    if [ -d "${ENTRY}" ] && [[ ":$PATH:" != *":${ENTRY}:"* ]]; then
        PATH="${PATH:+"$PATH:"}${ENTRY}"
    fi
done

# Load path files
for file in ~/.bash/path/*.bash; do
  [ -r "$file" ] && source "$file"
done

