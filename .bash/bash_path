# This file is used to extend the PATH variable

PATH=$PATH:$HOME/.rvm/bin 				# Add RVM to PATH for scripting

PATH=$PATH:$HOME/opt/android-sdk/sdk/tools		# Add Android tools
PATH=$PATH:$HOME/opt/android-sdk/sdk/platform-tools	# Add Android platform tools
PATH=$PATH:$HOME/opt/android-sdk/ndk    # Add Android NDK

PATH="$HOME/.bash/bin:$HOME/bin:$PATH"					# Set private bin path

PATH=$PATH:$HOME/opt/gradle/bin
PATH=$PATH:$HOME/opt/apache-maven/bin

# Load path files
for file in ~/.bash/aliases/*.bash; do
  [ -r "$file" ] && source "$file"
done

